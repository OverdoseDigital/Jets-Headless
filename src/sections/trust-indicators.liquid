<div class="container">
  <div class="trust-indicators-section icons-{{ section.blocks.size }}">
    <div class="trust-indicators-section__indicators">
      {% for block in section.blocks %}
        <div class="trust-indicators-section__indicator">
          <span class="trust-indicators-section__icon">{% render 'icons', icon: block.settings.icon %}</span>
          <div class="trust-indicators-section__text-container">
            <h5 class="trust-indicators-section__title">{{ block.settings.title }}</h5>
            <p class="trust-indicators-section__text">{{ block.settings.text }}</p>
          </div>
        </div>
        {% unless forloop.last %}
          <div class="trust-indicators-section__divider"></div>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</div>

