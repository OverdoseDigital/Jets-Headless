    "name": "Header",
    "class": "header-section",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "url",
        "id": "help_url",
        "label": "Help URL"
      },
      {
        "type": "header",
        "content": "Mobile Navigation Image Blocks"
      },
      {
        "type": "image_picker",
        "id": "feature_image_1",
        "label": "Feature image 1"
      },
      {
        "type": "text",
        "id": "feature_image_text_1",
        "label": "Feature image text 1"
      },
      {
        "type": "url",
        "id": "feature_image_url_1",
        "label": "Feature image link 1"
      },
      {
        "type": "checkbox",
        "id": "feature_image_1_double_width",
        "label": "Double width",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "feature_image_2",
        "label": "Feature image 2"
      },
      {
        "type": "text",
        "id": "feature_image_text_2",
        "label": "Feature image text 2"
      },
      {
        "type": "url",
        "id": "feature_image_url_2",
        "label": "Feature image link 2"
      },
      {
        "type": "checkbox",
        "id": "feature_image_2_double_width",
        "label": "Double width",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "set_nav_link_color",
        "name": "Set Nav Link Color",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Menu label",
            "info": "eg. Swimwear"
          },
          {
            "type": "color",
            "id": "link_color",
            "label": "Link Color"
          }
        ]
      },
      {
        "type": "subnav_columns",
        "name": "Subnav columns",
        "settings": [
          {
            "type": "paragraph",
            "content": "Specify the number of columns the text links occupy, if none is specified then it will remain as one."
          },
          {
            "type": "text",
            "id": "title",
            "label": "Menu label",
            "info": "eg. Swimwear"
          },
          {
            "type": "select",
            "id": "menu_columns",
            "label": "Image proportions",
            "default": "span-2",
            "options": [
              {
                "value": "span-2",
                "label": "Two columns"
              },
              {
                "value": "span-3",
                "label": "Three columns"
              },
              {
                "value": "span-4",
                "label": "Four columns"
              }
            ]
          }
        ]
      },
      {
        "type": "subnav_item",
        "name": "Subnav image block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Menu label",
            "info": "eg. Swimwear"
          },
          {
            "type": "text",
            "id": "subnav_item_label",
            "label": "Subnav item label"
          },
          {
            "type": "url",
            "id": "subnav_item_link",
            "label": "Subnav item link"
          },
          {
            "type": "image_picker",
            "id": "subnav_item_image",
            "label": "Subnav item image"
          },
          {
            "type": "checkbox",
            "id": "subnav_item_double_width",
            "label": "Double width",
            "default": false
          }
        ]
      }
    ]
  }
