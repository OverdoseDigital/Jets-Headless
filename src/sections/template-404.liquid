<div id="ErrorSection" data-section-id="{{ section.id }}" data-section-type="error-template">
  <div class="container container--extra-narrow section-spacer--{{ section.settings.section_bottom_margin }}">
    <div class="page-header">
      <h1 class="h3">{{ section.settings.title }}</h1>
      <p>{{ section.settings.body }}</p>

      {% if section.settings.include_search_input %}
        {% render 'search-form', inputId: 'SearchError', wrapperClasses: 'search-form--error medium-down--hide' %}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "404",
    "class": "error-template",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "body",
        "label": "Body"
      },
      {
        "type": "checkbox",
        "id": "include_search_input",
        "label": "Include search input",
        "default": true,
        "info": "Only shows on desktop layouts, on mobile the global search input is directly above."
      },
      {
        "type": "select",
        "id": "section_bottom_margin",
        "label": "Section bottom margin",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "none"
      }
    ]
  }
{% endschema %}
