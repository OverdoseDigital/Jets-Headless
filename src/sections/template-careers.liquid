<div data-section-id="{{ section.id }}" data-section-type="template-careers" class="container container--narrow section-spacer--{{ section.settings.section_bottom_margin }}">
  <div class="page-header">
    <h1 class="h3">
      <a href="{{ page.url }}">{{ page.title }}</a>
    </h1>
  </div>

  {%- if page.content != blank -%}
    <div class="rte">
      {{ page.content }}
    </div>
  {%- endif -%}

  <div id="ja-jobs-widget" class="ja-jobs-widget"></div>
  <script>
    var _jaJobsSettings = {
      key: "AU2_jqwumrzt5x3udmb4brpzxdxihq",
      applicationFormSettings: {
        useExternalApplicationForm: true,
        showExternalApplicationFormInNewWindow: true
      },
      jobSearchSettings: {
        showSearchForm: true,
        searchButtonText: "Search Jobs"
      },
      jobListSettings: {
        readMoreText: "Read More"
      }
    };
  </script>
  <script defer src="//apps.jobadder.com/widgets/v1/jobs.min.js"></script>
</div>

{% schema %}
  {
    "name": "Careers",
    "settings": [
      {
        "type": "select",
        "id": "section_bottom_margin",
        "label": "Section bottom margin",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "none"
      }
    ],
    "templates": [
      "page"
    ],
    "presets": [
      {
        "name": "Careers"
      }
    ]
  }
{% endschema %}
