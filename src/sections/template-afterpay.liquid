<div class="container container--wide section-spacer--{{ section.settings.section_bottom_margin }}">
  {%- if section.settings.mobile_image != blank or section.settings.desktop_image != blank -%}
    {%- render 'component-picture',
      image_mobile: section.settings.mobile_image,
      image_desktop: section.settings.desktop_image,
      img_alt: page.title,
      max_width_mobile: 1600,
      max_width_desktop: 1920,
      sizes: '(min-width: 58.875rem) 56.875rem, 100vw'
    -%}
  {%- endif -%}
</div>

{% schema %}
  {
    "name": "Afterpay",
    "settings": [
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile image",
        "info": "Minimum size 1600px wide"
      },
      {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Desktop image",
        "info": "Minimum size 1920px wide"
      },
      {
        "type": "select",
        "id": "section_bottom_margin",
        "label": "Section bottom margin",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "none"
      }
    ],
    "templates": [
      "page"
    ],
    "presets": [
      {
        "name": "Afterpay"
      }
    ]
  }
{% endschema %}
